{
	"name": "@twin.org/framework",
	"version": "0.0.0",
	"description": "Framework",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/twinfoundation/framework.git"
	},
	"author": "martyn.janes@iota.org",
	"license": "Apache-2.0",
	"private": true,
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"dist": "node ./scripts/workspaces.mjs dist",
		"format": "prettier --config .prettierrc --write .",
		"lint:format": "prettier --config .prettierrc --check .",
		"lint:code": "eslint . --ext .js,.mjs,.ts",
		"lint:markdown": "markdownlint **/*.md --ignore **/node_modules/** --ignore **/docs/reference/**  --ignore **/changelog.md",
		"lint:spell": "cspell ** --no-progress",
		"lint": "npm run lint:format && npm run lint:code && npm run lint:markdown && npm run lint:spell",
		"local-link": "node ./scripts/local-link.mjs",
		"commitlint": "commitlint --edit",
		"generate-release-configs": "node scripts/generate-release-configs.mjs release",
		"prepare": "husky"
	},
	"devDependencies": {
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-conventional": "19.8.1",
		"@typescript-eslint/eslint-plugin": "7.13.1",
		"cspell": "9.0.2",
		"eslint": "8.57.0",
		"eslint-config-prettier": "10.1.5",
		"eslint-plugin-header": "3.1.1",
		"eslint-plugin-import": "2.31.0",
		"eslint-plugin-jsdoc": "50.7.1",
		"eslint-plugin-prettier": "5.4.1",
		"eslint-plugin-promise": "7.2.1",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"eslint-plugin-unicorn": "56.0.1",
		"eslint-plugin-unused-imports": "3.2.0",
		"fast-glob": "3.3.3",
		"husky": "9.1.7",
		"markdownlint-cli": "0.45.0",
		"prettier": "3.5.3",
		"release-please": "17.1.0"
	},
	"workspaces": [
		"packages/nameof-transformer",
		"packages/nameof-vitest-plugin",
		"packages/nameof",
		"packages/core",
		"packages/entity",
		"packages/crypto",
		"packages/image",
		"packages/qr",
		"packages/web",
		"packages/modules",
		"apps/merge-locales",
		"packages/cli-core",
		"apps/crypto-cli"
	],
	"type": "module"
}
