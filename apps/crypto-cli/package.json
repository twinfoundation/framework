{
	"name": "@twin.org/crypto-cli",
	"version": "0.0.1-next.8",
	"description": "A command line interface for interacting with the crypto tools",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/twinfoundation/framework.git",
		"directory": "apps/crypto-cli"
	},
	"author": "martyn.janes@iota.org",
	"license": "Apache-2.0",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"clean": "rimraf dist coverage",
		"build": "tsc",
		"build:watch": "tsc-watch --onSuccess \"npm run bundle:esm\"",
		"merge-locales": "merge-locales",
		"test": "vitest --run --config ./vitest.config.ts --no-cache",
		"coverage": "vitest --run --coverage --config ./vitest.config.ts --no-cache",
		"bundle:esm": "rollup --config rollup.config.mjs --environment MODULE:esm",
		"bundle:cjs": "rollup --config rollup.config.mjs --environment MODULE:cjs",
		"bundle": "npm run bundle:esm && npm run bundle:cjs",
		"docs:clean": "rimraf docs/reference",
		"docs:generate": "typedoc",
		"docs": "npm run docs:clean && npm run docs:generate",
		"dist": "npm run clean && npm run build && npm run merge-locales && npm run test && npm run bundle && npm run docs",
		"prepare": "ts-patch install -s"
	},
	"dependencies": {
		"@twin.org/cli-core": "0.0.1-next.8",
		"@twin.org/core": "0.0.1-next.8",
		"@twin.org/crypto": "0.0.1-next.8",
		"@twin.org/nameof": "next",
		"commander": "12.1.0"
	},
	"devDependencies": {
		"@twin.org/merge-locales": "next",
		"@twin.org/nameof-transformer": "next",
		"@types/node": "22.6.1",
		"@vitest/coverage-v8": "2.1.1",
		"copyfiles": "2.4.1",
		"rimraf": "6.0.1",
		"rollup": "4.22.4",
		"rollup-plugin-typescript2": "0.36.0",
		"ts-patch": "3.2.1",
		"tsc-watch": "6.2.0",
		"typedoc": "0.26.7",
		"typedoc-plugin-markdown": "4.2.8",
		"typescript": "5.6.2",
		"vitest": "2.1.1"
	},
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/esm/index.mjs",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/cjs/index.cjs",
			"import": "./dist/esm/index.mjs",
			"types": "./dist/types/index.d.ts"
		}
	},
	"files": [
		"bin",
		"dist/cjs",
		"dist/esm",
		"dist/locales",
		"dist/types",
		"locales",
		"docs"
	],
	"bin": {
		"twin-crypto": "bin/index.js"
	}
}
