{
	"name": "@gtsc/crypto-cli",
	"version": "0.0.4-next.22",
	"description": "A command line interface for interacting with the crypto tools",
	"repository": {
		"type": "git",
		"url": "https://github.com/gtscio/framework.git",
		"directory": "packages/crypto-cli"
	},
	"author": "martyn.janes@iota.org",
	"license": "Apache-2.0",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"clean": "rimraf dist coverage",
		"build": "tspc",
		"merge-locales": "merge-locales",
		"test": "vitest --run --config ./vitest.config.ts",
		"coverage": "vitest --run --coverage --config ./vitest.config.ts",
		"bundle:esm": "rollup --config rollup.config.mjs --environment MODULE:esm",
		"bundle:cjs": "rollup --config rollup.config.mjs --environment MODULE:cjs",
		"bundle": "npm run bundle:esm && npm run bundle:cjs",
		"docs:clean": "rimraf docs/reference",
		"docs:generate": "typedoc",
		"docs:remove-header": "replace-in-files --regex='^.*overview.md.*?\\s\\s.*?\\s\\s' --string='docs/' --replacement='' docs/**/*.md",
		"docs": "npm run docs:clean && npm run docs:generate && npm run docs:remove-header",
		"dist": "npm run clean && npm run build && npm run merge-locales && npm run test && npm run bundle && npm run docs"
	},
	"dependencies": {
		"@gtsc/cli-core": "0.0.4-next.22",
		"@gtsc/core": "0.0.4-next.22",
		"@gtsc/crypto": "0.0.4-next.22",
		"@gtsc/nameof": "next",
		"chalk": "^5.3.0",
		"commander": "^12.1.0"
	},
	"devDependencies": {
		"@gtsc/merge-locales": "next",
		"@gtsc/nameof-transformer": "next",
		"@types/node": "^20.12.12",
		"@vitest/coverage-v8": "^1.6.0",
		"copyfiles": "^2.4.1",
		"replace-in-files-cli": "^2.2.0",
		"rimraf": "^5.0.7",
		"rollup": "^4.17.2",
		"rollup-plugin-typescript2": "^0.36.0",
		"ts-patch": "^3.1.2",
		"typedoc": "^0.25.13",
		"typedoc-plugin-markdown": "^4.0.2",
		"typescript": "^5.4.5",
		"vitest": "^1.6.0"
	},
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/esm/index.mjs",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/cjs/index.cjs",
			"import": "./dist/esm/index.mjs",
			"types": "./dist/types/index.d.ts"
		}
	},
	"files": [
		"bin",
		"dist/cjs",
		"dist/esm",
		"dist/locales",
		"dist/types",
		"locales",
		"docs"
	],
	"bin": {
		"gtsc-crypto": "bin/index.js"
	}
}
