{
	"name": "@gtsc/crypto",
	"version": "0.0.3-next.43",
	"description": "Contains helper methods and classes which implement cryptographic functions",
	"repository": {
		"type": "git",
		"url": "https://github.com/gtscio/framework.git",
		"directory": "packages/crypto"
	},
	"author": "martyn.janes@iota.org",
	"license": "Apache-2.0",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"clean": "rimraf dist coverage docs/reference",
		"build": "tspc",
		"test": "vitest --run --config ./vitest.config.ts",
		"coverage": "vitest --run --coverage --config ./vitest.config.ts",
		"bundle:esm": "rollup --config rollup.config.mjs --environment MODULE:esm",
		"bundle:cjs": "rollup --config rollup.config.mjs --environment MODULE:cjs",
		"bundle": "npm run bundle:esm && npm run bundle:cjs",
		"docs:clean": "rimraf docs/reference",
		"docs:generate": "typedoc",
		"docs:remove-header": "replace-in-files --regex='^.*overview.md.*?\\s\\s.*?\\s\\s' --string='docs/' --replacement='' docs/**/*.md",
		"docs": "npm run docs:clean && npm run docs:generate && npm run docs:remove-header",
		"dist": "npm run clean && npm run build && npm run test && npm run bundle && npm run docs"
	},
	"dependencies": {
		"@gtsc/core": "0.0.3-next.43",
		"@gtsc/nameof": "next",
		"@noble/ciphers": "^0.5.3",
		"@noble/curves": "^1.4.0",
		"@noble/hashes": "^1.4.0",
		"@scure/base": "^1.1.6",
		"@scure/bip32": "^1.4.0",
		"@scure/bip39": "^1.3.0",
		"micro-key-producer": "^0.7.0"
	},
	"devDependencies": {
		"@gtsc/nameof-transformer": "next",
		"@vitest/coverage-v8": "^1.6.0",
		"copyfiles": "^2.4.1",
		"replace-in-files-cli": "^2.2.0",
		"rimraf": "^5.0.7",
		"rollup": "^4.17.2",
		"rollup-plugin-typescript2": "^0.36.0",
		"ts-patch": "^3.1.2",
		"typedoc": "^0.25.13",
		"typedoc-plugin-markdown": "^4.0.2",
		"typescript": "^5.4.5",
		"vitest": "^1.6.0"
	},
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/esm/index.mjs",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/cjs/index.cjs",
			"import": "./dist/esm/index.mjs",
			"types": "./dist/types/index.d.ts"
		},
		"./locales": "./locales"
	},
	"files": [
		"dist/cjs",
		"dist/esm",
		"dist/types",
		"locales",
		"docs"
	]
}
